{
  "manifest_version": 3,
  "name": "GradeScope Progress Estimator",
  "version": "1.0",
  "description": "Estimates the remaining time for grading assignments on Gradescope.",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/GradeScopeProgress.png",
      "48": "images/GradeScopeProgress.png",
      "128": "images/GradeScopeProgress.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.gradescope.com/courses/*/questions/*/submissions/*/grade*"],
      "js": ["src/content.js"]
    }
  ],
  "icons": {
    "16": "images/GradeScopeProgress.png",
    "48": "images/GradeScopeProgress.png",
    "128": "images/GradeScopeProgress.png"
  }
}
